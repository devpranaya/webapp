// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GameSession {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  completedAt     DateTime?
  status          String    // "won", "lost", "abandoned", "in_progress"
  timeElapsed     Int?      // seconds
  fixesCompleted  String    @default("") // JSON array as string
  violations      String    @default("") // JSON array as string
  playerName      String?

  @@index([createdAt])
}

model Feedback {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  sessionId   String?
  source      String   // "family", "friends", "industry"
  rating      Int      // 1-5
  comments    String?
  suggestions String?

  @@index([createdAt, source])
}
